{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://citation-file-format.github.io/1.2.0/schema-strict",
    "title": "Citation File Format",
    "description": "A file with citation metadata for software or datasets",
    "additionalProperties": false,
    "type": "object",
    "properties": {
        "cff-version": {
            "$ref": "https://citation-file-format.github.io/1.2.0/schema#/properties/cff-version"
        },
        "message": {
            "$ref": "https://citation-file-format.github.io/1.2.0/schema#/properties/message"
        },
        "type": {
            "$ref": "https://citation-file-format.github.io/1.2.0/schema#/properties/type"
        },
        "abstract": {
            "$ref": "https://citation-file-format.github.io/1.2.0/schema#/properties/abstract"
        },
        "authors": {
            "$ref": "https://citation-file-format.github.io/1.2.0/schema#/properties/authors"
        },
        "commit": {
            "$ref": "https://citation-file-format.github.io/1.2.0/schema#/properties/commit"
        },
        "contact": {
            "$ref": "https://citation-file-format.github.io/1.2.0/schema#/properties/contact"
        },
        "date-released": {
            "$ref": "https://citation-file-format.github.io/1.2.0/schema#/properties/date-released"
        },
        "doi": {
            "pattern": "^doi:10\\.\\d{4,9}(\\.\\d+)?/[A-Za-z0-9:/-_;\\.\\(\\)\\[\\]\\\\]+$",
            "type": "string"
        },
        "identifiers": {
            "$ref": "https://citation-file-format.github.io/1.2.0/schema#/properties/identifiers"
        },
        "keywords": {
            "$ref": "https://citation-file-format.github.io/1.2.0/schema#/properties/keywords"
        },
        "license": {
            "$ref": "https://citation-file-format.github.io/1.2.0/schema#/properties/license"
        },
        "license-url": {
            "$ref": "https://citation-file-format.github.io/1.2.0/schema#/properties/license-url"
        },
        "repository": {
            "$ref": "https://citation-file-format.github.io/1.2.0/schema#/properties/repository"
        },
        "repository-code": {
            "$ref": "https://citation-file-format.github.io/1.2.0/schema#/properties/repository-code"
        },
        "repository-artifact": {
            "$ref": "https://citation-file-format.github.io/1.2.0/schema#/properties/repository-artifact"
        },
        "title": {
            "$ref": "https://citation-file-format.github.io/1.2.0/schema#/properties/title"
        },
        "url": {
            "$ref": "https://citation-file-format.github.io/1.2.0/schema#/properties/url"
        },
        "version": {
            "$ref": "https://citation-file-format.github.io/1.2.0/schema#/properties/version"
        },
        "references": {
            "$ref": "https://citation-file-format.github.io/1.2.0/schema#/properties/references"
        }
    },
    "required": [
        "authors",
        "date-released",
        "cff-version",
        "message",
        "title",
        "version"
    ]
}
